<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3
                http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <!--id采用版本命名，这样打包的tar.gz就会携带版本信息 -->
    <id>release</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>target/dest/conf/</directory>
            <outputDirectory>new-project-init/conf</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/dest/bin/</directory>
            <outputDirectory>new-project-init/bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/dest/lib/</directory>
            <outputDirectory>new-project-init/lib</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/dest/src/</directory>
            <outputDirectory>new-project-init/src</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <!--生成logs空目录-->
        <fileSet>
            <directory>target/dest/</directory>
            <outputDirectory>new-project-init/logs</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>